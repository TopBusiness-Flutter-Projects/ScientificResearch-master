<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="event"
            type="com.topbusiness.scientificresearch.userEventsListener.UserListener"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        tools:context="com.topbusiness.scientificresearch.activities.EfadaOrderActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/ko7ly"
                    app:contentInsetEnd="0dp"
                    app:contentInsetRight="0dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/back"
                            android:padding="12dp"
                            android:clickable="true"
                            android:onClick="@{event::onClickListener}"
                            android:layout_alignParentLeft="true"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/free_trans"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:id="@+id/babelfish"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:background="@drawable/database_yellow"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="@{event::onClickListener}"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:clickable="false"
                    android:longClickable="false"
                    android:layout_marginBottom="20dp"
                    android:text="Babelfish"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/wordRef"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:background="@drawable/database_blue"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="@{event::onClickListener}"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:clickable="false"
                    android:longClickable="false"
                    android:layout_marginBottom="20dp"
                    android:text="WordReference"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/freeTrans"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:background="@drawable/database_yellow"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="@{event::onClickListener}"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:clickable="false"
                    android:longClickable="false"
                    android:layout_marginBottom="20dp"
                    android:text="FreeTranslation"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/promtOnline"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:background="@drawable/database_blue"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="@{event::onClickListener}"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:clickable="false"
                    android:longClickable="false"
                    android:layout_marginBottom="20dp"
                    android:text="PROMT-Online"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/doc_trans"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:background="@drawable/database_blue"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="@{event::onClickListener}"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:clickable="false"
                    android:longClickable="false"
                    android:layout_marginBottom="20dp"
                    android:text="Doc Translation"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"

                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
