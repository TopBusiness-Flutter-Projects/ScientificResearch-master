<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="event"
            type="com.topbusiness.scientificresearch.userEventsListener.UserListener"/>

    </data>
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgetPasswordActivity"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="@color/ko7ly"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:src="@drawable/back"
            android:layout_margin="10dp"
            android:onClick="@{event::onClickListener}"
            />
        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            android:padding="30dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:text="@string/rcov_pass_msg"
            />

        <EditText
            android:id="@+id/edt_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:hint="@string/email"
            android:textSize="17sp"
            android:background="@drawable/login_ed_bg"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/email_icon"
            tools:ignore="RtlCompat"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            />
        <Button
            android:id="@+id/rest_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_ed_bg"
            android:textColor="@color/ko7ly"
            android:text="@string/reset_password"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:onClick="@{event::onClickListener}"

            />
    </LinearLayout>
</ScrollView>
</layout>
